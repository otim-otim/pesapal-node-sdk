
{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "dist"]
  }